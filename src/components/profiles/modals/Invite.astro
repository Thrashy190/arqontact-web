---
import FullScreenModal from "@components/common/FullScreenModal.astro";
---

<FullScreenModal closeType="times" target="invite-modal" title="Enviar invitación">
    <div class="flex flex-col gap-5">
        <div class="flex flex-col gap-1">
            <label class="font-medium" html-for="board">Tablero</label>
            <input
                class="bg-gray-100 px-4 py-2 rounded-lg focus-visible:outline-gray-300"
                type="text"
                placeholder="Hospital San Felipe"
            />
        </div>
        <div class="flex flex-col gap-1">
            <label class="font-medium" html-for="phase">Etapa</label>
            <input
                class="bg-gray-100 px-4 py-2 rounded-lg focus-visible:outline-gray-300"
                type="text"
                placeholder="Cimentación"
            />
        </div>
        <div class="flex flex-col gap-1">
            <label class="font-medium" html-for="job">Puesto</label>
            <input
                class="bg-gray-100 px-4 py-2 rounded-lg focus-visible:outline-gray-300"
                type="text"
                placeholder="Carpintero"
            />
        </div>
    </div>
</FullScreenModal>