---
import { Icon } from "astro-icon";
import Overlay from "@components/common/Overlay.astro";
import Gallery from "@components/profiles/Gallery.tsx";
---

<Overlay class="max-sm:hidden" target="gallery-carrousel">
    <div class="relative w-3/4 md:aspect-video flex max-md:flex-col justify-center items-center bg-white rounded-md">
        <div class="cursor-pointer absolute -left-16">
            <Icon name="fa-solid:chevron-left" class="w-8 text-white"/>
        </div> 
        <div class="cursor-pointer absolute -right-16">
            <Icon name="fa-solid:chevron-right" class="w-8 text-white"/>
        </div>
        <div class="flex-shrink-0 h-full aspect-square max-md:rounded-t-md md:rounded-l-md overflow-hidden">
            <img class='w-full aspect-square object-cover object-center' src="https://assets.easybroker.com/property_images/2688782/42240426/EB-JH8782.jpeg" alt="gallery-item"/>
        </div>
        <!-- <div class="h-full aspect-square">
            <Gallery totalChildren={3} client:load>
                <img class='h-full aspect-square snap-center object-cover object-center' src="https://assets.easybroker.com/property_images/2688782/42240426/EB-JH8782.jpeg" alt="gallery-item"/>
                <img class='h-full aspect-square snap-center object-cover object-center' src="https://assets.easybroker.com/property_images/2688782/42240512/EB-JH8782.JPG" alt="gallery-item" />
                <img class='h-full aspect-square snap-center object-cover object-center' src="https://assets.easybroker.com/property_images/2688782/42240509/EB-JH8782.JPG" alt="gallery-item" />
            </Gallery>
        </div> -->
        <div class="h-full flex flex-col p-4 gap-4 overflow-hidden">
            <div class="flex gap-3">
                <img class='w-6 aspect-square flex-shrink-0 rounded-full object-cover' src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSY8dkWYTLlEbqVU1TUU9O5VjeiV1Q5sx_qMwnOjq8HJcjP75uR3vf89Wl4YcQaVy0V63E&usqp=CAU" alt="profile" />
                <p class="text-action font-medium underline">Carpinterías Ramírez</p>
            </div>
            <div class="flex-shrink-0 w-full h-auto flex gap-2 flex-wrap text-xs overflow-x-auto mobile-scrollbar">
                <span class="bg-amber-100 text-amber-400 flex items-center px-3 py-1 rounded-md">
                    #casasmodernas
                </span>
                <span class="bg-amber-100 text-amber-400 flex items-center px-3 py-1 rounded-md">
                    #querétaro
                </span>
                <span class="bg-amber-100 text-amber-400 flex items-center px-3 py-1 rounded-md">
                    #juriquilla
                </span>
            </div>
            <p class="overflow-y-auto mobile-v-scrollbar">Ola demonio, esta es una casa muy chingona que está aquí en Querétaro. Ola demonio, esta es una casa muy chingona que está aquí en Querétaro. Ola demonio, esta es una casa muy chingona que está aquí en Querétaro.</p>
            <div class="flex justify-end border-t border-gray-200 pt-3 mt-auto">
                <Icon name="fa-regular:bookmark" class="w-5 h-5 text-action"/>
            </div>
        </div>
    </div>
</Overlay>