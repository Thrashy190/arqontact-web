---
import { Icon } from "astro-icon";
import BackLink from "@components/common/BackLink";

interface Props {
    header?: boolean,
    title?: string,
    backLink?: string | boolean,
    shrink?: boolean
}

const { header = true, title, backLink, shrink = false } = Astro.props;
---
<div class={`w-full h-full bg-white pt-5 px-5 flex flex-col ${ shrink ? 'items-center' : '' } justify-center overflow-y-auto self-end`}>
    <div class={`w-full ${ shrink ? `sm:max-w-[450px]` : ''} h-full flex flex-col gap-3`}>
        {
            header && <div class="z-[5] before:content-[''] before:w-[calc(100%+2.5rem)] before:h-[calc(100%+1.25rem)] before:bg-white before:absolute before:-top-5 before:-left-5 sticky top-0 py-3 bg-white flex items-center gap-10 text-gray-400">
                {
                    backLink === true ? <BackLink client:only/> : (backLink && backLink.length > 0 ? <a href={backLink} class='cursor-pointer z-[6] text-xl'>
                        <Icon name="fa-solid:chevron-left" className="w-5 h-5"/>
                    </a> : null)
                }
                <span class='z-[6] font-bold text-xl text-gray-800'>
                    { title }
                </span>
            </div>
        }
        <slot />
    </div>
</div>