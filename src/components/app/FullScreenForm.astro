---
import { Icon } from "astro-icon";

interface Props {
  title: string,
  backLink: string,
  label: string,
}

const { title, backLink, label } = Astro.props;
---
<div class="w-full h-full bg-white p-5 flex flex-col justify-between overflow-hidden self-end">
    <div class="h-full flex flex-col gap-3 overflow-y-auto mobile-scrollbar">
        <div class="h-full flex flex-col gap-4">
          <div class="sticky top-0 py-3 bg-white flex items-center gap-10 text-gray-400">
            {
                backLink ? <a href={backLink} class='text-xl'>
                    <Icon name="fa-solid:chevron-left" class="w-5 h-5"/>
                </a> : null
            }
            <span class='font-bold text-xl text-gray-800'>
                { title }
            </span>
        </div>
          <slot />
        </div>
        <button class="justify-self-end py-2 text-center font-semibold bg-amber-400 text-white rounded-xl uppercase">{ label }</button>
    </div>
</div>