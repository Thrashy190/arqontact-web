---
import { Icon } from "astro-icon";

interface Props {
    title: string,
    backLink: string,
}

const { title, backLink } = Astro.props;
---
<div class="w-full h-full bg-white pt-5 px-5 flex flex-col justify-between overflow-hidden self-end">
    <div class="flex flex-col gap-3 overflow-y-auto mobile-scrollbar">
        <div class="sticky top-0 py-3 bg-white flex items-center gap-10 text-gray-400">
            <a href={backLink} class='text-xl'>
                <Icon name="fa-solid:chevron-left" class="w-5 h-5"/>
            </a>
            <span class='font-medium text-2xl text-gray-800'>
                { title }
            </span>
        </div>
        <slot />
    </div>
</div>