---
interface Props {
    title: string,
    location: string,
    percent: number,
    duration: string,
}

const { title, location, percent, duration } = Astro.props;
---
<a href="/projects/1">
    <div class="flex flex-col py-4 gap-4">
        <div class="flex justify-between items-start">
            <div class="flex flex-col">
                <h3 class="text-lg font-semibold">{ title }</h3>
                <p class="text-sm text-gray-500">{ location }</p>
            </div>
            <div class="w-6 h-6 bg-lime-500 rounded-full border-[6px] border-lime-200"></div>
        </div>
        <div class="flex items-center gap-4">
            <div class="w-full flex-shrink-0 flex-1 flex items-center gap-2">
                <div class="w-full h-1 flex bg-gray-200 rounded-full">
                    <div style={`width: ${ percent }%`} class={`bg-amber-400 rounded-full`}></div>
                </div>
                <span class="text-sm font-medium">{ percent }%</span>
            </div>
            <span class="w-20 text-end text-sm text-gray-500">{ duration }</span>
        </div>
    </div>
</a>