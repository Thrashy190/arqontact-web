---
import FullScreenScaffold from "@components/app/FullScreenScaffold.astro";

interface Props {
    title: string,
    description: string,
    subject: string,
    updateLink: string,
}

const { title, description, subject, updateLink } = Astro.props;
---

<FullScreenScaffold backLink="/configuration" title={ title } shrink color="bg-white">
    <div class="flex flex-col gap-5">
        <p class="text-gray-500">{ description }</p>
        <div class="flex justify-between">
            <p>{ subject }</p>
            <a class="text-action font-medium" href={ updateLink }>Cambiar</a>
        </div>
    </div>
</FullScreenScaffold>