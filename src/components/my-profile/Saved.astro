---
import { Icon } from "astro-icon";
import FullScreenScaffold from "@components/app/FullScreenScaffold.astro";
---
<FullScreenScaffold title="Guardados" backLink={true} shrink>
    <div slot="header-extras" class="absolute bottom-0 self-start z-[6] flex gap-4 text-gray-800 overflow-visible">
        <button class="border-b-2 border-amber-400 text-sm h-full px-2 py-1 flex items-center gap-2">
            <span class="text-amber-400 font-semibold">Todas</span>
            <span class="bg-amber-400 text-xs text-white px-2 py-1 rounded-sm">10</span>
        </button>
        <button class="text-sm text-gray-400 text-sm h-full px-2 py-1 flex items-center gap-2">
            <span class="font-semibold">Ofertas</span>
            <span class="bg-gray-100 text-gray-400 text-xs px-2 py-1 rounded-sm">10</span>
        </button>
        <button class="text-sm text-gray-400 text-sm h-full px-2 py-1 flex items-center gap-2">
            <span class="font-semibold">Profesionales</span>
            <span class="bg-gray-100 text-gray-400 text-xs px-2 py-1 rounded-sm">10</span>
        </button>
    </div>
    <div class="h-full flex flex-col sm:gap-4 max-sm:divide-y max-sm:divide-gray-200 sm:[&>*:last-child]:pb-4">
        {
            Array(10).fill(null).map((e, index) => {
                return <div class="w-full h-full">
                    <div class="bg-white p-4 gap-4 flex sm:border sm:border-gray-200 sm:rounded-md">
                        <div class="flex-shrink-0 flex flex-col gap-3">
                            <img class='w-20 h-20 rounded-full object-cover' src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSY8dkWYTLlEbqVU1TUU9O5VjeiV1Q5sx_qMwnOjq8HJcjP75uR3vf89Wl4YcQaVy0V63E&usqp=CAU" alt="profile" />
                            <Icon name="fa-solid:bookmark" class="w-4 h-4 text-action self-center"/>
                        </div>
                        <div class="w-full flex flex-col gap-2">
                            <div class="flex justify-between items-center">
                                <a href="/profile/1" class='font-semibold underline'>Juan José Cruz Aguirre</a>
                                <div class='w-auto text-gray-400 flex items-center rounded-md px-2 py-1 gap-3'>
                                    <Icon name="fa-solid:star" class="sm:hidden w-3 h-3 text-amber-400"/>
                                    <span>4.5</span>
                                    <div class="hidden sm:flex gap-1">
                                        <Icon name="fa-solid:star" class="w-3 h-3 text-amber-400"/>
                                    </div>
                                    <span class="hidden sm:block">(35)</span>
                                </div>
                            </div>
                            <div class="flex items-center gap-2 text-amber-400">
                                <Icon name="fa-solid:hammer" class="w-5 h-5"/>
                                <div class='w-auto self-start text-sm font-medium flex items-center bg-amber-100 rounded-md px-2 py-1 gap-3'>
                                    <span>Bloquero</span>
                                </div>
                            </div>
                            <div class="flex flex-wrap gap-2 sm:gap-4">
                                <div class="flex gap-1 items-center">
                                    <Icon name="fa-solid:map-pin" class="w-4 h-4 text-amber-400"/>
                                    <span>Querétaro, QRO.</span>
                                </div>
                                <div class="flex gap-1 items-center">
                                    <Icon name="fa-solid:clock" class="w-4 h-4 text-amber-400"/>
                                    <span>15 años de experiencia.</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            })
        }
    </div>
</FullScreenScaffold>