---
import { Icon } from "astro-icon";
import Grade from "./Grade.astro";
import OrderBy from "./OrderBy.astro";
import FullScreenModal from "@components/common/FullScreenModal.astro";
---

<FullScreenModal id="all-filters" title="Filtros">
    <div class="flex flex-col gap-5">
        <OrderBy/>
        <Grade/>
        <div class="flex flex-col gap-5">
            <div class='flex items-center gap-1 text-gray-600 text-lg font-semibold'>
                <span>Puestos</span>
            </div>
            <div class="bg-white text-gray-600 flex flex-col rounded-lg divide-y divide-gray-200 border border-gray-200">
                <div class="w-full flex-shrink flex divide-x divide-gray-200">
                    <div class="flex flex-col flex-1 text-xs justify-center items-center p-2 gap-1">
                        <span class='text-base'><Icon class="w-6 h-6" icon="tabler:window"/></span>
                        <span class='w-full self-stretch text-center'>Cancelero</span>
                    </div>
                    <div class="flex flex-col flex-1 text-xs justify-center items-center p-2 gap-1">
                        <span class='text-base'><Icon class="w-6 h-6" icon="mdi:anvil"/></span>
                        <span class='w-full self-stretch text-center'>Herrero</span>
                    </div>
                    <div class="flex flex-col flex-1 text-xs justify-center items-center p-2 gap-1">
                        <span class='text-base'><Icon class="w-6 h-6" icon="tabler:wood"/></span>
                        <span class='w-full self-stretch text-center'>Carpintero</span>
                    </div>
                    <div class="flex flex-col flex-1 text-xs justify-center items-center p-2 gap-1">
                        <span class='text-base'><Icon class="w-6 h-6" icon="tabler:brush"/></span>
                        <span class='w-full self-stretch text-center'>Pintor</span>
                    </div>
                </div>
                <div class="w-full flex-shrink flex divide-x divide-gray-200"> 
                    <div class="flex flex-col flex-1 text-xs justify-center items-center p-2 gap-1">
                        <span class='text-base'><Icon class="w-6 h-6" icon="tabler:wall"/></span>
                        <span class='w-full self-stretch text-center'>Bloquero</span>
                    </div>
                    <div class="flex flex-col flex-1 text-xs justify-center items-center p-2 gap-1">
                        <span class='text-base'><Icon class="w-6 h-6" icon="mdi:pipe"/></span>
                        <span class='w-full self-stretch text-center'>Plomero</span>
                    </div>
                    <div class="flex flex-col flex-1 text-xs justify-center items-center p-2 gap-1">
                        <span class='text-base'><Icon class="w-6 h-6" icon="tabler:trowel"/></span>
                        <span class='w-full self-stretch text-center'>Yesero</span>
                    </div>
                    <div class="flex flex-col flex-1 text-xs justify-center items-center p-2 gap-1">
                        <span class='text-base'><Icon class="w-6 h-6" icon="tabler:shovel"/></span>
                        <span class='w-full self-stretch text-center'>Albañíl</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</FullScreenModal>