---
import { Icon } from "astro-icon";
import Tabs from "@components/common/Tabs";
--- 

<div class="flex flex-col gap-5">
    <div class='flex items-center gap-1 text-gray-600 text-lg font-semibold'>
        <span>Calificación</span>
    </div>
    <div class="bg-blue-50 text-blue-600 rounded-md flex items-center gap-3 px-4 py-2">
        <Icon name="fa-solid:info-circle" class="w-5 h-5"/>
        <span class="font-medium">Calificación de por lo menos...</span>
    </div>
    <Tabs
        client:load
        tabId="grade"
        items={[
            { name:'4.5', id: '45'},
            { name:'4.0', id: '40'},
            { name:'3.5', id: '35'},
            { name:'Cualquiera', id: 'all'},
        ]}
        tabClasses="px-2"
    />
</div>