---
import { Icon } from "astro-icon";
import Tabs from "@components/common/Tabs"
import Grade from "./modals/Grade.astro";
import OrderBy from "./modals/OrderBy.astro";
import { Search } from "@components/common/inputs";
---
<div class="min-w-0 hidden sm:flex items-center justify-between">
    <h1 class="text-2xl font-bold text-gray-800">Directorio de Profesionales</h1>
    <Tabs
        client:load
        tabId="directory"
        items={[
            { name:'Profesionales', id: 'professionals'},
            { name:'Arquitectos', id: 'architects'},
        ]}
        tabClasses="px-2"
    />
</div>
<div class="w-full flex items-center gap-3 text-gray-500">
    <label for="all-filters-trigger" class='w-10 h-10 flex-shrink-0 sm:hidden flex justify-center items-center bg-gray-100 text-gray-400 rounded-full'>
        <Icon name="fa-solid:sliders-h" class="w-5 h-5"/>
    </label>
    <div class="w-full flex flex-row sm:flex-col text-sm overflow-x-auto sm:overflow-visible no-scrollbar gap-3 sm:mt-3">
        <div class="self-end w-72 hidden sm:flex items-center gap-3">
            <Search id="professional-search" placeholder="Buscar..." client:load/>
            <button class="bg-amber-400 text-white py-1 px-2 uppercase rounded-md font-semibold">
                Buscar
            </button>
        </div>
        <div class="flex-shrink-0 flex gap-3">
            <div class="relative">
                <label class="cursor-pointer block sm:hidden" for="order-by-filters">
                    <div class='flex-shrink-0 flex items-center bg-gray-100 text-gray-400 rounded-full px-4 py-1 gap-3'>
                        <span>Tipo de orden</span>
                        <Icon name="fa-solid:chevron-down" class="w-4 h-4"/>
                    </div>
                </label>
                <label class="hidden sm:block peer cursor-pointer" for="order-popup">
                    <input id="order-popup" class="hidden" type="checkbox"/>
                    <div class='flex-shrink-0 flex items-center bg-gray-100 text-gray-400 rounded-full px-4 py-1 gap-3'>
                        <span>Tipo de orden</span>
                        <Icon name="fa-solid:chevron-down" class="w-4 h-4"/>
                    </div>
                </label>
                <div class="peer-has-[:checked]:scale-100 scale-0 hidden sm:block z-30 top-[calc(100%+.75rem)] left-0 bg-white rounded-lg shadow-strong absolute p-3 transition-all">
                    <OrderBy/>
                </div>
            </div>
            <div class="relative">
                <label class="cursor-pointer block sm:hidden" for="grade-filters">
                    <div class='flex-shrink-0 flex items-center bg-gray-100 text-gray-400 rounded-full px-4 py-1 gap-3'>
                        <span>Calificación</span>
                        <Icon name="fa-solid:chevron-down" class="w-4 h-4"/>
                    </div>
                </label>
                <label class="hidden sm:block peer cursor-pointer" for="grade-popup">
                    <input id="grade-popup" class="hidden" type="checkbox"/>
                    <div class='flex-shrink-0 flex items-center bg-gray-100 text-gray-400 rounded-full px-4 py-1 gap-3'>
                        <span>Calificación</span>
                        <Icon name="fa-solid:chevron-down" class="w-4 h-4"/>
                    </div>
                </label>
                <div class="peer-has-[:checked]:scale-100 scale-0 hidden sm:block z-30 top-[calc(100%+.75rem)] left-0 bg-white rounded-lg shadow-strong absolute p-3 transition-all">
                    <Grade/>
                </div>
            </div>
            <div class="relative">
                <label class="peer cursor-pointer" for="abilities-popup">
                    <input id="abilities-popup" class="hidden" type="checkbox"/>
                    <div class='flex-shrink-0 flex items-center bg-gray-100 text-gray-400 rounded-full px-4 py-1 gap-3'>
                        <span>Habilidades</span>
                        <Icon name="fa-solid:chevron-down" class="w-4 h-4"/>
                    </div>
                </label>
                <div class="peer-has-[:checked]:scale-100 scale-0 hidden sm:block z-30 top-[calc(100%+.75rem)] left-0 bg-white rounded-lg shadow-strong absolute p-3 transition-all">
                    <div class="w-64 flex flex-col gap-5">
                        <div class="flex items-center gap-1 text-gray-600 text-lg font-semibold">
                            <span>Habilidades</span>
                        </div>
                        <div class="w-full hidden sm:flex items-center gap-3">
                            <Search id="professional-search" placeholder="Buscar..." client:load/>
                            <button class="bg-amber-400 text-white py-1 px-2 uppercase rounded-md font-semibold">
                                Buscar
                            </button>
                        </div>
                        <div class="h-48 mobile-scrollbar overflow-y-auto w-full flex flex-col gap-2">
                            {
                                Array(10).fill(null).map((e, index) => {
                                    return <label for={`skill-${index}`} class="has-[:checked]:bg-amber-100/70 has-[:checked]:text-amber-500 rounded-md py-1 px-2 flex justify-between items-center gap-2 cursor-pointer">
                                        <span>Carpintería</span>
                                        <input id={`skill-${index}`} type="checkbox" class="w-5 h-5"/>
                                    </label>
                                })
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="relative">
                <label class="peer cursor-pointer" for="activity-popup">
                    <input id="activity-popup" class="hidden" type="checkbox"/>
                    <div class='flex-shrink-0 flex items-center bg-gray-100 text-gray-400 rounded-full px-4 py-1 gap-3'>
                        <span>Actividad</span>
                        <Icon name="fa-solid:chevron-down" class="w-4 h-4"/>
                    </div>
                </label>
                <div class="peer-has-[:checked]:scale-100 scale-0 hidden sm:block z-30 top-[calc(100%+.75rem)] left-0 bg-white rounded-lg shadow-strong absolute p-3 transition-all">
                    <div class="w-48 flex flex-col gap-5">
                        <div class="flex items-center gap-1 text-gray-600 text-lg font-semibold">
                            <span>Actividad</span>
                        </div>
                        <div class="flex flex-col gap-2">
                            <label for="has-commentaries" class="flex gap-2 cursor-pointer">
                                <input id="has-commentaries" type="checkbox" class="w-5 h-5"/>
                                <span>Tiene comentarios</span>
                            </label>
                            <label for="has-projects" class="flex gap-2 cursor-pointer">
                                <input id="has-projects" type="checkbox" class="w-5 h-5"/>
                                <span>Tiene proyectos</span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>