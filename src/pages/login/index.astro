---
import Layout from "@layouts/Layout.astro";
import Icon from "@components/common/Icon.astro";
import Scaffold from "@components/auth/Scaffold.astro";
---

<Layout title="Inicio de Sesión | Arqontact">
    <Scaffold>
        <div class="flex flex-col gap-6">
            <h1 class="text-3xl font-normal">Iniciemos</h1>
            <div class="flex flex-col gap-1">
                <label class="font-medium" for="mail">Correo electrónico</label>
                <input
                    class="bg-gray-100 px-4 py-2 rounded-lg focus-visible:outline-gray-300"
                    type="text"
                    placeholder="correo@ejemplo.com"
                />
            </div>
            <div class="flex flex-col gap-1">
                <label class="font-medium" for="password">Contraseña</label>
                <input
                    class="bg-gray-100 px-4 py-2 rounded-lg focus-visible:outline-gray-300"
                    type="text"
                    placeholder="correo@ejemplo.com"
                />
            </div>
            <div class="flex justify-between">
                <button
                    class="flex text-xs items-center bg-amber-100 text-amber-400 rounded-full px-2 py-1 gap-3"
                >
                    <Icon icon="fas fa-envelope" />
                    <span>Correo</span>
                </button>
                <button
                    class="flex text-xs items-center bg-gray-100 text-gray-400 rounded-full px-2 py-1 gap-3"
                >
                    <Icon icon="fas fa-phone" />
                    <span>Teléfono</span>
                </button>
            </div>
            <button
                class="py-2 text-center font-semibold bg-amber-400 text-white rounded-xl uppercase"
            >
                Iniciar Sesión
            </button>
            <div class="flex flex-row-reverse">
                <a href="/register" class="text-amber-400 underline">
                    Aún no tengo cuenta
                </a>
            </div>
        </div>
        <div class="flex flex-col gap-6">
            <h2 class="font-medium">Iniciar sesión con:</h2>
            <div class="flex justify-between">
                <button
                    class="flex text-xs items-center bg-gray-100 text-gray-400 rounded-full px-2 py-1 gap-3"
                >
                    <Icon icon="fab fa-google" />
                    <span>Google</span>
                </button>
                <button
                    class="flex text-xs items-center bg-gray-100 text-gray-400 rounded-full px-2 py-1 gap-3"
                >
                    <Icon icon="fab fa-linkedin" />
                    <span>Linkedin</span>
                </button>
                <button
                    class="flex text-xs items-center bg-gray-100 text-gray-400 rounded-full px-2 py-1 gap-3"
                >
                    <Icon icon="fab fa-facebook-f" />
                    <span>Facebook</span>
                </button>
            </div>
        </div>
    </Scaffold>
</Layout>
