---
import { Icon } from "astro-icon";
import AppLayout from "@layouts/AppLayout.astro";
import ProfileHeader from "@components/profiles/ProfileHeader.astro";
import ProfileInfo from "@components/profiles/ProfileInfo.astro";
import ProfileComments from "@components/profiles/ProfileComments.astro";
import ProfileGalleries from "@components/profiles/ProfileGalleries.astro";
import Profile from "@components/profiles/Profile.tsx";
import ProfileOptions from "@components/profiles/ProfileOptions.tsx";
import InviteBubble from "@components/profiles/actions/InviteBubble.astro";
import Invite from "@components/profiles/modals/Invite.astro"
import CommentBubble from "@components/profiles/actions/CommentBubble.astro";
import Comment from "@components/profiles/modals/Comment.astro"

export function getStaticPaths() {
  return [
    {params: {profileId: 1}},
  ];
}
---

<AppLayout title="Perfil">
  <Invite />
  <Comment />
  <div class="w-full min-h-0 flex justify-center">
    <Profile client:load withActions>
        <div slot="links" class="flex justify-between">
            <a href={'/dashboard'} class='text-gray-600'>
                <Icon name="fa-solid:chevron-left" class="w-4 h-4"/>
            </a>
            <ProfileOptions />
        </div>
        <ProfileHeader interactive withActions slot="profileHeader">
          <InviteBubble />
          <CommentBubble />
        </ProfileHeader>
        <ProfileInfo slot="profileInfo" />
        <ProfileComments slot="profileComments" />
        <ProfileGalleries slot="profileGalleries" />
    </Profile>
  </div>
</AppLayout>