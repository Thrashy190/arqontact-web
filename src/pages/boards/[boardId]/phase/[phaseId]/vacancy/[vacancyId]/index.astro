---
import { Icon } from "astro-icon";
import AppLayout from "@layouts/AppLayout.astro";
import FullScreenScaffold from "@components/app/FullScreenScaffold.astro";

export function getStaticPaths() {
  return [
    {params: {boardId: 1, phaseId: 1, vacancyId: 1}},
  ];
}

const { boardId, phaseId, vacancyId } = Astro.params;
---

<AppLayout title="Perfil">
    <FullScreenScaffold title="Carpintero" backLink={`/boards/${boardId}/phase/${phaseId}`}>
        <!-- <div class='w-screen h-20 bg-gray-100 flex flex-col divide-y divide-gray-200 overflow-y-auto mobile-scrollbar'> -->
            <header class='z-20 flex-shrink-0 w-full bg-white overflow-hidden flex items-center text-gray-500 gap-3'>
                <div class="h-8 flex text-sm overflow-x-auto no-scrollbar gap-3">
                    <button class='flex-shrink-0 flex items-center bg-amber-100 text-amber-400 rounded-full px-4 py-1 gap-3'>
                        <span>Bloquero</span>
                    </button>
                    <button class='flex-shrink-0 flex items-center bg-gray-100 text-gray-400 rounded-full px-4 py-1 gap-3'>
                        <span>Ordenar por</span>
                        <Icon name="fa-solid:chevron-down" class="w-3 h-3"/>
                    </button>
                    <button class='flex-shrink-0 flex items-center bg-gray-100 text-gray-400 rounded-full px-4 py-1 gap-3'>
                        <span>Calificación</span>
                        <Icon name="fa-solid:chevron-down" class="w-3 h-3"/>
                    </button>
                </div>
            </header>
            <div class="flex flex-col divide-y divide-gray-200 overflow-y-auto mobile-scrollbar">
                {
                    Array(10).fill(null).map((e, index) => {
                        return <a href={`/boards/${boardId}/phase/${phaseId}/vacancy/${vacancyId}/candidates/${1}`}>
                            <div class="w-full bg-white flex flex-shrink-0 items-center gap-4 py-6 px-3">
                                <img class='w-20 h-20 flex-shrink-0 rounded-full object-cover' src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSY8dkWYTLlEbqVU1TUU9O5VjeiV1Q5sx_qMwnOjq8HJcjP75uR3vf89Wl4YcQaVy0V63E&usqp=CAU" alt="profile" />
                                <div class="w-full flex flex-col gap-2">
                                    <div class="flex justify-between items-center">
                                        <h2 class='font-semibold underline'>Juan José Cruz Aguirre</h2>
                                        <div class='w-auto flex items-center rounded-md px-2 py-1 gap-1'>
                                            <Icon name="fa-solid:star" class="w-3 h-3 text-amber-400"/>
                                            <span class="text-gray-400">4.5</span>
                                        </div>
                                    </div>
                                    <div class="flex items-center gap-2 text-amber-400">
                                        <Icon name="fa-solid:hammer" class="w-5 h-5"/>
                                        <div class='w-auto self-start text-sm font-medium flex items-center bg-amber-100 rounded-md px-2 py-1 gap-3'>
                                            <span>Bloquero</span>
                                        </div>
                                    </div>
                                    <div class="flex flex-wrap gap-2 sm:gap-4">
                                        <div class="flex gap-1 items-center">
                                            <Icon name="fa-solid:map-pin" class="w-4 h-4 text-amber-400"/>
                                            <span>Querétaro, QRO.</span>
                                        </div>
                                        <div class="flex gap-1 items-center">
                                            <Icon name="fa-solid:clock" class="w-4 h-4 text-amber-400"/>
                                            <span>15 años de experiencia.</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    })
                }
            </div>
        <!-- </div> -->
    </FullScreenScaffold>
</AppLayout>