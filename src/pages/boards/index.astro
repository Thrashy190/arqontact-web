    <FullScreenScaffold title="Mis proyectos">
        <CreateBoardBubble active />
        <div class="flex flex-col divide-y divide-gray-200 overflow-y-auto mobile-scrollbar">
            <Board title="Hospital San Felipe" location="Querétaro, QRO." percent={30} duration="6 meses" />
            <Board title="Hospital San Felipe" location="Querétaro, QRO." percent={30} duration="1 mes" />
            <Board title="Hospital San Felipe" location="Querétaro, QRO." percent={30} duration="10 semanas" />
            <Board title="Hospital San Felipe" location="Querétaro, QRO." percent={30} duration="6 meses" />
            <Board title="Hospital San Felipe" location="Querétaro, QRO." percent={30} duration="6 meses" />
        </div>
    </FullScreenScaffold>
</AppLayout>