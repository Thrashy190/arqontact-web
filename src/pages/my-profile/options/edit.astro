---
import { Icon } from "astro-icon";
import AppLayout from "@layouts/AppLayout.astro";
import Overlay from "@components/common/Overlay";
import StepScaffold from "@components/app/StepScaffold.astro";
---

<AppLayout title="Editar perfil">
    <Overlay client:load />
    <StepScaffold title="Editar perfil" backLink="/my-profile/options">
        <div class="flex flex-col overflow-hidden">
            <div class="flex justify-center items-center gap-6">
                <div class="w-full flex flex-col items-center gap-2">
                    <div class="w-6 h-6 bg-lime-500 rounded-full border-[6px] border-lime-200 self-end"></div>
                    <img class='w-20 h-20 flex-shrink-0 rounded-full object-cover' src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSY8dkWYTLlEbqVU1TUU9O5VjeiV1Q5sx_qMwnOjq8HJcjP75uR3vf89Wl4YcQaVy0V63E&usqp=CAU" alt="profile" />
                    <a href="#" class="text-action font-semibold">Editar</a>
                </div>
            </div>
            <div class="flex flex-col gap-8 pt-3 mobile-scrollbar overflow-y-auto">
                <div class="flex flex-col gap-2">
                    <h3 class="text-sm font-semibold uppercase text-gray-400">Datos personales</h3>
                    <a href="#" class="flex justify-between items-center text-sm gap-4 py-2">
                        <span class="font-medium">Nombre:</span>
                        <div class="flex items-center gap-3">
                            <p>Juan José Cruz Aguirre</p>
                            <Icon name="fa-solid:chevron-right" class="w-3 h-3 text-gray-400"/>
                        </div>
                    </a>
                </div>
                <div class="flex flex-col gap-2">
                    <h3 class="text-sm font-semibold uppercase text-gray-400">Contacto</h3>
                    <a href="#" class="flex justify-between items-center text-sm gap-4 py-2">
                        <span class="font-medium">Correo electrónico:</span>
                        <div class="flex items-center gap-3">
                            <p>jjca@gmail.com</p>
                            <Icon name="fa-solid:chevron-right" class="w-3 h-3 text-gray-400"/>
                        </div>
                    </a>
                    <a href="#" class="flex justify-between items-center text-sm gap-4 py-2">
                        <span class="font-medium">Teléfono:</span>
                        <div class="flex items-center gap-3">
                            <p>4461117033</p>
                            <Icon name="fa-solid:chevron-right" class="w-3 h-3 text-gray-400"/>
                        </div>
                    </a>
                </div>
                <div class="flex flex-col gap-2">
                    <h3 class="text-sm font-semibold uppercase text-gray-400">Habilidades</h3>
                    <a href="#" class="flex justify-between items-center text-sm gap-4 py-2">
                        <span class="font-medium">Rol:</span>
                        <div class="flex items-center gap-3">
                            <p>Constructor</p>
                            <div></div>
                        </div>
                    </a>
                    <a href="#" class="flex justify-between items-center text-sm gap-4 py-2">
                        <span class="font-medium">Puesto:</span>
                        <div class="flex items-center gap-3">
                            <p>4461117033</p>
                            <Icon name="fa-solid:chevron-right" class="w-3 h-3 text-gray-400"/>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </StepScaffold>
</AppLayout>