---
import { Icon } from "astro-icon";
import AppLayout from "@layouts/AppLayout.astro";
import Overlay from "@components/common/Overlay";
import StepScaffold from "@components/app/StepScaffold.astro";
---

<AppLayout title="Más opciones">
    <Overlay client:load />
    <StepScaffold title="Más opciones" backLink="/my-profile">
        <div class="flex flex-col overflow-hidden">
            <div class="flex gap-6 items-center">
                <img class='w-20 h-20 flex-shrink-0 rounded-full object-cover' src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSY8dkWYTLlEbqVU1TUU9O5VjeiV1Q5sx_qMwnOjq8HJcjP75uR3vf89Wl4YcQaVy0V63E&usqp=CAU" alt="profile" />
                <div class="w-full flex flex-col text-xs gap-2">
                    <h2 class='text-sm font-medium'>Juan José Cruz Aguirre</h2>
                    <div class='w-auto self-start flex items-center bg-amber-100 text-amber-400 rounded-md px-2 py-1 gap-3'>
                        <span>Bloquero</span>
                    </div>
                    <div class="flex items-center gap-4">
                        <div class='w-auto flex items-center bg-amber-100 text-amber-400 rounded-md px-2 py-1 gap-3'>
                            <span>4.5</span>
                            <Icon name="fa-solid:star" class="w-3 h-3"/>
                        </div>
                        <span class="text-gray-500">7 posts</span>
                    </div>
                </div>
            </div>
            <div class="flex flex-col gap-3 pt-3 mobile-scrollbar overflow-y-auto">
                <a href="/my-profile/options/edit" class="flex justify-between items-center gap-4 py-2">
                    <div class="flex gap-4">
                        <Icon name="fa-solid:user-alt" class="w-4 h-4 text-gray-700"/>
                        <span class="font-medium text-sm">Editar perfil</span>
                    </div>
                    <Icon name="fa-solid:chevron-right" class="w-3 h-3 text-gray-400"/>
                </a>
                <a href="/my-profile/options/saved" class="flex justify-between items-center gap-4 py-2">
                    <div class="flex gap-4">
                        <Icon name="fa-solid:bookmark" class="w-4 h-4 text-gray-700"/>
                        <span class="font-medium text-sm">Guardados</span>
                    </div>
                    <Icon name="fa-solid:chevron-right" class="w-3 h-3 text-gray-400"/>
                </a>
                <h3 class="text-sm font-semibold uppercase text-gray-400">Producto</h3>
                <a href="/my-profile/options/pay-data" class="flex justify-between items-center gap-4 py-2">
                    <div class="flex gap-4">
                        <Icon name="fa-solid:credit-card" class="w-4 h-4 text-gray-700"/>
                        <span class="font-medium text-sm">Datos de pago</span>
                    </div>
                    <Icon name="fa-solid:chevron-right" class="w-3 h-3 text-gray-400"/>
                </a>
                <a href="#" class="flex justify-between items-center gap-4 py-2">
                    <div class="flex gap-4">
                        <Icon name="fa-solid:award" class="w-4 h-4 text-gray-700"/>
                        <span class="font-medium text-sm">Suscripción</span>
                    </div>
                    <Icon name="fa-solid:chevron-right" class="w-3 h-3 text-gray-400"/>
                </a>
                <h3 class="text-sm font-semibold uppercase text-gray-400">Notificaciones</h3>
                <a href="/my-profile/options/notifications" class="flex justify-between items-center gap-4 py-2">
                    <div class="flex gap-4">
                        <Icon name="fa-solid:bell" class="w-4 h-4 text-gray-700"/>
                        <span class="font-medium text-sm">Notificaciones</span>
                    </div>
                    <Icon name="fa-solid:chevron-right" class="w-3 h-3 text-gray-400"/>
                </a>
