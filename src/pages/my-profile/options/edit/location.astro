---
import { Icon } from "astro-icon";
import AppLayout from "@layouts/AppLayout.astro";
import Overlay from "@components/common/Overlay";
import FullScreenForm from "@components/app/FullScreenForm.astro";
---
<AppLayout title="Datos personales">
    <Overlay client:load />
    <FullScreenForm backLink="/my-profile/options/edit" title="Datos personales" label="Confirmar">
        <div class="flex flex-col gap-1">
            <label class="font-medium" html-for="comment">Ubicación</label>
            <input
                class="bg-gray-100 px-4 py-2 rounded-lg focus-visible:outline-gray-300"
                placeholder="Zamora, Michoacán."
            />
            <a href="#" class="flex justify-center items-center gap-3 mt-2 py-2 rounded-md border border-gray-200 text-action">
                <Icon name="fa-solid:map-pin" class="w-5 h-5"/>
                <p class="font-medium">Usar ubicación actual</p>
            </a>
        </div>
    </FullScreenForm>
</AppLayout>