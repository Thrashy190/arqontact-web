					}
					<div class="w-auto flex space-x-10">
						<div class="flex flex-col w-full space-y-2">
							<label for="message" class="text-lg font-medium"
								>Mensaje</label
							>
							<textarea
								required
								name="message"
								class="text-lg flex items-center rounded-md p-4 h-40 border-0 bg-gray-100 placeholder-gray-400 text-gray-800"
							></textarea>
						</div>
					</div>
					<div class="flex justify-end">
						<button
							type="submit"
							class="bg-amber-400 font-medium px-4 py-2 text-white rounded-md uppercase"
							>ENVIAR</button
						>
					</div>
				</form>
			</div>
		</section>
		<section
			id="workers"
			class="flex flex-col border-t-2 border-dashed border-gray-300 py-14 space-y-6 justify-center items-center bg-gray-100 px-6 md:px-10 lg:px-28"
