---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon";

import Navbar from "@components/landing/Navbar.tsx";
import RoadmapItem from "@components/landing/RoadmapItem.astro";
import FAQArea from "@components/landing/FAQArea.tsx";
import InfoArea from "@components/landing/InfoArea.tsx";
---

<Layout title="Inicio | Arqontact">
	<main id="landing-page" class="w-full h-full relative bg-gray-100">
		<Navbar client:load />
		<section class="h-[calc(100vh-6rem)] relative flex items-center">
			<div
				class="bg-white absolute z-10 w-full h-full"
				style="clip-path: polygon(0 0, 0 100%, 100% 0)"
			>
			</div>
			<div
				class="self-end right-0 bg-white absolute md:z-30 w-[60vw] h-[60%] xl:w-[55vw] xl:h-[55%]"
				style="clip-path: polygon(100% 100%, 0 100%, 100% 0)"
			>
			</div>
			<div class="white-gradient z-[25] absolute bottom-0 w-full h-24">
			</div>
			<div class="px-6 md:px-10 lg:px-28 w-full h-full flex items-center">
				<div
					class="w-full h-full z-[15] flex-1 grow flex flex-col justify-center items-center space-y-10"
				>
					<h1
						class="text-right xs:text-center md:text-right text-5xl font-semibold"
					>
						Conecta con el personal adecuado. Sin esfuerzo.
					</h1>
					<div
						class="w-full text-right xs:text-center md:text-right text-3xl font-normal"
					>
						Baja nuestra aplicación:
					</div>
					<div
						class="w-full flex flex-col space-y-6 xs:items-start items-end xs:flex-row xs:space-y-0 xs:space-x-6 justify-center md:justify-end"
					>
						<a href="/dashboard">
							<button
								class="text-amber-400 transition-all hover:scale-110 self-end px-3.5 py-2.5 bg-amber-100 rounded-2xl justify-start items-center gap-5 inline-flex"
							>
								<div class="relative bg-black bg-opacity-0">
									<Icon name="fa-brands:google-play" class="w-6 h-6"/>
								</div>
								<div
									class="text-lg lg:text-2xl font-bold"
								>
									Google Play
								</div>
							</button>
						</a>
						<a href="/dashboard">
							<button
								class="text-amber-400 transition-all hover:scale-110 self-end px-3.5 py-2.5 bg-amber-100 rounded-2xl justify-start items-center gap-5 inline-flex"
							>
								<div class="relative bg-black bg-opacity-0">
									<Icon name="fa-brands:apple" class="w-6 h-6"/>
								</div>
								<div
									class="text-lg lg:text-2xl font-bold"
								>
									App Store
								</div>
							</button>
						</a>
					</div>
				</div>
				<div
					class="hidden md:flex relative h-full flex-1 grow justify-center items-center"
				>
					<div
						class="z-[5] absolute w-96 h-96 bg-amber-400 rounded-full"
					>
					</div>
					<img
						class="absolute z-20"
						src="/worker.png"
						width="525"
						height="60"
						alt="worker-cover"
					/>
				</div>
			</div>
		</section>
		<section
			id="us"
			class="flex flex-col space-y-12 md:space-y-0 md:flex-row flex-wrap text-gray-800 px-6 md:px-10 lg:px-28 py-12 md:py-20 bg-white"
		>
			<h1 class="w-full md:mb-8 font-semibold flex items-center">
				<div
					class="bg-white text-amber-400 w-10 h-10 inline-flex justify-center items-center mr-4 rounded-full shadow-md p-5"
				>
					<Icon name="fa-solid:user" class="flex-shrink-0 w-4 h-4"/>
				</div>
				<span class="text-3xl lg:text-5xl">Nosotros</span>
			</h1>
			<div class="flex flex-1 grow">
				<div class="flex flex-col space-y-6">
					<p class="w-full text-xl lg:text-3xl font-normal">
						Arqontact es una aplicación para que puedas conectar con
						personal para tu obra. Tenemos perfiles de obreros
						interesados en colaborar contigo.
					</p>
					<p class="w-full text-xl lg:text-3xl font-normal">
						Con tan solo tu celular, podrás contactar con la gente
						indicada para tu proyecto.
					</p>
				</div>
			</div>
			<div class="flex flex-1 grow items-center justify-center">
				<img
					src="/landing_profile.svg"
					width="400"
					height="225"
					alt="profile"
				/>
			</div>
		</section>
		<section
			class="relative flex flex-col text-gray-800 px-6 md:px-10 lg:px-28 py-12 md:py-24 bg-white"
		>
			<InfoArea client:load />
		</section>
		<section
			class="flex flex-col border-y-2 border-dashed border-gray-300 py-14 space-y-6 justify-center items-center bg-gray-100 px-6 md:px-10 lg:px-28"
		>
			<img
				src="/landing_server.svg"
				width="150"
				height="190"
				alt="profile"
			/>
			<div class="bg-white rounded-md px-10 py-8 flex flex-col space-y-5">
				<p
					class="w-auto lg:w-[600px] text-center text-2xl lg:text-3xl font-semibold"
				>
					Ten acceso a la base de datos de obreros más grande de <span
						class="text-amber-400">México</span
					>.
				</p>
				<button
					class="transition-all hover:scale-110 w-auto self-center bg-amber-100 text-amber-400 rounded-xl px-6 py-4 text-xl lg:text-2xl"
					>Empieza gratis</button
				>
			</div>
		</section>
