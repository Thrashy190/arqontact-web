---
import Layout from "@layouts/Layout.astro";
import StepScaffold from "@components/auth/StepScaffold.astro";
import UserTypeSelection from "@components/auth/UserTypeSelection.tsx";
---

<Layout title="Registro | Arqontact">
    <StepScaffold>
        <div class="flex flex-col flex-grow self-stretch justify-between">
            <div class="flex flex-col gap-6">
                <h1 class='text-3xl font-normal'>¿Quién eres?</h1>
                <UserTypeSelection client:load/>
            </div>
            <a href='/dashboard' class={`text-center py-2 font-semibold bg-amber-400 text-white rounded-xl uppercase transition-all`}>
                Continuar
            </a>
        </div>
    </StepScaffold>
</Layout>
